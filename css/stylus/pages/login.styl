.btn{
  font-size: 1rem;
  font-family: 'Lato', sans-serif;
  font-weight: 100;
  color: #fff
  background-color: #303030;
  padding: 10px 50px;
  cursor: pointer;
  transition: ease-in .3s;
  border: 1px solid #303030;
}
.btn:hover{
  background-color: transparent;
  border: 1px solid #303030;
  color: #303030;
}


/* input starts here */
input:focus ~ label,
textarea:focus ~ label,
input:valid ~ label,
textarea:valid ~ label {
  font-size: 1em;
  color: #303030;
  top: -2.25rem;
  -webkit-transition: all 0.125s cubic-bezier(0.2, 0, 0.03, 1);
  transition: all 0.125s cubic-bezier(0.2, 0, 0.03, 1);
  font-family: 'Raleway', sans-serif;
  font-weight: 400;
}


.btn a{
  text-decoration: none;
  color: #fff;
}
.btn a:hover{
  color: #303030
}

.styled-input {
  float: none;
  width: 50%;
  margin: 2rem 0 1rem;
  position: relative;
  margin: 5% auto;
}

.styled-input label {
  color: #999;
  padding: 1rem;
  position: absolute;
  top: 0;
  left: 0;
  -webkit-transition: all 0.25s cubic-bezier(0.2, 0, 0.03, 1);
  transition: all 0.25s cubic-bezier(0.2, 0, 0.03, 1);
  pointer-events: none;
  font-family: 'Raleway', sans-serif;
  font-weight: 400;
}

.styled-input.wide {
  width: 100%;
}

input,
textarea {
  padding: 1rem 1rem;
  border: 0;
  width: 100%;
  font-size: 1rem;
  border-bottom: 1px solid #303030;
  background-color: transparent;
  // border: none;
  font-family: 'Raleway', sans-serif;
  font-weight: 400;
  color: #303030;
  left: 0;
  border-left: none;
  right: 0;
}

input ~ span,
textarea ~ span {
  display: block;
  width: 0;
  height: 3px;
  background: #303030;
  position: absolute;
  bottom: 0;
  left: 0;
  -webkit-transition: all 0.125s cubic-bezier(0.2, 0, 0.03, 1);
  transition: all 0.125s cubic-bezier(0.2, 0, 0.03, 1);
  font-family: 'Raleway', sans-serif;
  font-weight: 400;
}

input:focus,
textarea:focus {
  outline: 0;
  font-family: 'Raleway', sans-serif;
  font-weight: 400;
}

input:focus ~ span,
textarea:focus ~ span {
  width: 106%;
  -webkit-transition: all 0.125s cubic-bezier(0.2, 0, 0.03, 1);
  transition: all 0.125s cubic-bezier(0.2, 0, 0.03, 1);
}

textarea {
  width: 100%;
  min-height: 15em;
}

