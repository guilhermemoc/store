// teste
.card {
  width: 250px;
  position: relative;
  transition: 0.2s;
  margin: 20px;
  display: inline-block;
  // border: 1px solid #999;
  &::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: white;
    border-radius: 10px;
    z-index: -1;
    opacity: 0;
    transition: 0.1s;
  }
  &:hover,
  &:focus {
    transform: scale(0.96);
    &::before {
      opacity: 1;
      transform: scale(1.1);
    }
  }
  &:active {
    transform: scale(0.95);
    &::before {
      opacity: 1;
      transform: scale(1.13);
      box-shadow: 0 5px 5px -4px rgba(black, 0.4);
    }
  }
}
